! Use a nice truetype font and size by default... 
UXTerm*faceName: Fira Code NF
UXTerm*faceSize: 11
UXTerm*allowBoldFonts: false

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
UXTerm*loginshell: true

! I like a LOT of scrollback...
UXTerm*savelines: 16384

! double-click to select whole URLs :D
!UXTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! right hand side scrollbar...
UXTerm*rightScrollBar: true
UXTerm*ScrollBar: false

UXTerm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

! stop output to terminal from jumping down to bottom of scroll again
UXTerm*scrollTtyOutput: false


! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true

rofi.color-window:    base00, base00 , base00 , base00 , base07
rofi.color-normal:    base00 , #ffffff, base00 , base00 ,  base0A
rofi.color-active:    base00 , base0B  , base00 , base00 , base07
rofi.color-urgent:    base00 , base03  , base00 , base00 , base07

rofi.font              : San Francisco Display 16
rofi.columns           : 1
rofi.separator-style   : none
rofi.hide-scrollbar    : true
rofi.location          : 0
rofi.padding           : 12
rofi.fullscreen        : true
rofi.width             : 550
rofi.lines             : 9

Xft.dpi       : 96
Xft.antialias : true
Xft.rgba      : rgb
Xft.hinting   : true
Xft.hintstyle : hintslight
Xft.autohint  : false
Xft.lcdfilter : lcddefault

