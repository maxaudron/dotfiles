IMAPAccount cocaine.farm
# Address to connect to
Host mail.cocaine.farm
User audron@cocaine.farm
# To store the password in an encrypted file use PassCmd instead of Pass
PassCmd "pass show Mail/audron@cocaine.farm"
# Use SSL
SSLType IMAPS
# The following line should work. If get certificate errors, uncomment the two following lines and read the "Troubleshooting" section.
CertificateFile /etc/ssl/certs/ca-bundle.crt

IMAPStore cocaine.farm-remote
Account cocaine.farm

MaildirStore cocaine.farm-local
Subfolders Verbatim
# The trailing "/" is important
Path ~/.local/mail/cocaine.farm/
Inbox ~/.local/mail/cocaine.farm/Inbox
# Archive ~/.local/mail/cocaine.farm/Archive
# Sent ~/.local/mail/cocaine.farm/Sent
# Drafts ~/.local/mail/cocaine.farm/Drafts
# Junk ~/.local/mail/cocaine.farm/Junk
# Trash ~/.local/mail/cocaine.farm/Trash

Channel cocaine.farm
Master :cocaine.farm-remote:
Slave :cocaine.farm-local:
# Include all folders
Patterns *
# Automatically create missing mailboxes, both locally and on the server
Create Both
# Save the synchronization state files in the relevant directory
SyncState *

