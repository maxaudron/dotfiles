[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
; format-prefix-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.foreground}
label = %percentage:2%%

[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
; format-prefix-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.foreground}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = "%d/%m/%Y"

time = %H:%M
time-alt = [%H:%M:%S]

format-prefix =
; format-prefix-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.blue}

label = %date% %time%

[module/temp]
type = internal/temperature
