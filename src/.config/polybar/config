exec              = echo label
click-left        = exec playerctl previous
format-foreground = ${colors.red}
format-background = ${colors.modb1}
format-padding    = 1

[module/next]
type              = custom/script
format-text       = <label>
label             = 
exec              = echo label
click-left        = exec playerctl next
format-foreground = ${colors.red}
format-background = ${colors.modb1}
format-padding    = 1

[module/spotipy]
type              = custom/script
exec              = python3 ~/scripts/spoti.py
exec-if           = pgrep spotify > /dev/null
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.foreground}
format-background = ${colors.modb1}
format-padding    = 1

[module/playpause]
type              = custom/script
exec              = python3 ~/scripts/spoti-play.py
interval          = 0.01
click-left        = playerctl -p spotify play-pause
format-foreground = ${colors.red}
format-background = ${colors.modb1}
format-padding    = 1

