label-separator            = |
label-separator-foreground = #666666

menu-0-0      = reboot
menu-0-0-exec = menu-open-1
menu-0-1      = poweroff
menu-0-1-exec = menu-open-2
menu-0-2      = logout
menu-0-2-exec = menu-open-3

menu-1-0      = 
menu-1-0-exec = shutdown -r now
menu-1-1      = 
menu-1-1-exec = menu-open-0

menu-2-0      = 
menu-2-0-exec = shutdown -h now
menu-2-1      = 
menu-2-1-exec = menu-open-0

menu-3-0      = 
menu-3-0-exec = herbstclient quit
menu-3-1      = 
menu-3-1-exec = menu-open-0

[module/previous]
type              = custom/script
format-text       = <label>
